#include<stdio.h>

int main()
{
    int n,p,k;
    int i,j,l,test;

        scanf("%d",&test);

        for(i=1; i<=test; i++){

    scanf("%d %d %d",&n,&k,&p);

    if(n<2){
        break;
    }

      for(j=1;j<=p ; j++){
            if(k<=n){
                k++;
            }
            if(k>n){
                k=1;
            }

         }
               printf("Case %d: %d\n",i,k);

               k=0;
}

